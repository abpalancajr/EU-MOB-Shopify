{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% comment %}
  This page template is a requirement if you are submitting your theme to the Shopify Theme Store.
  Be sure to select page.contact as the template from the admin page to have this template take effect.

  For information on adding more fields, visit:
    - http://docs.shopify.com/support/configuration/store-customization/adding-fields-to-the-liquid-contact-form
{% endcomment %}

{% comment %}
  Google Map
{% endcomment %}
{% if settings.display_google_map %}
<div class="map">
  {% if settings.google_map_code != blank %}
  {% comment %}ly_new_settings_replace_for_[ settings.google_map_code ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id4215193"] %}{% assign ly_translation = shop.metafields[namespace]["id4215193"] %}{% else %}{% assign ly_translation = settings.google_map_code %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}
  {% endif %}
</div>
{% endif %}

<div class="contactus-page container">
  {% include 'breadcrumb' %}
    
  {% comment %}
    Regular page content goes here.
  {% endcomment %}
  <div class="rte">
    {% comment %}ly_code_replace_for_[ page.content ]_begin{% endcomment %}{% include 'ly-content' with page %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}
  </div>
  
  {% comment %}
    Contact form starts here
  {% endcomment %}
  <div>
    {% form 'contact' %}
    
    {% comment %}
      Successful message
    {% endcomment %}
    {% if form.posted_successfully? %}
    <p class="note form-success">
      <ly-as-4215194>Thanks for contacting us! We'll get back to you as soon as possible.</ly-as-4215194>
    </p>
    {% endif %}
    
    {% include 'form-errors-custom' %}
    
    <div class="row">    
      <div class="col-xs-9">
        <div id="contactFormWrapper">
          <h2>{% comment %}ly_new_settings_replace_for_[ settings.contact_title ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id4215195"] %}{% assign ly_translation = shop.metafields[namespace]["id4215195"] %}{% else %}{% assign ly_translation = settings.contact_title %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}</h2>
          <p class="line"></p>
          <p>{% comment %}ly_new_settings_replace_for_[ settings.contact_text_desc ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id4215196"] %}{% assign ly_translation = shop.metafields[namespace]["id4215196"] %}{% else %}{% assign ly_translation = settings.contact_text_desc %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}</p>
          <label for="contactFormName"><ly-as-4215197>Your Name</ly-as-4215197></label>
          <input type="text" id="contactFormName" name="contact[name]" autocapitalize="words" placeholder="{{ settings.contact_your_name }}">
            
          <label for="contactFormPhone"><ly-as-4215198>Your Phone</ly-as-4215198></label>
          <input type="tel" name="contact[phone]" id="contactFormPhone" pattern="[0-9]*" placeholder="{{ settings.contact_phone_number }}">
          
          <label for="contactFormEmail"><ly-as-4215199>Your Email</ly-as-4215199><em>*</em></label>
          <input type="email" name="contact[email]" id="contactFormEmail" autocorrect="off" autocapitalize="off" placeholder="{{ settings.contact_your_email }}">
          
          <label for="contactFormMessage"><ly-as-4215200>Your Comment</ly-as-4215200><em>*</em></label>
          <textarea rows="10" name="contact[body]" id="contactFormMessage" placeholder="{{ settings.contact_your_comment }}"></textarea>
          
          <input type="submit" class="btn left" value="<ly-as-4215202>Submit Contact</ly-as-4215202>">
        </div>
      </div>
      
      {% if settings.display_location %}
      <div class="col-xs-3">
        <div class="location">
          {% if settings.location_code != blank %}
          {% comment %}ly_new_settings_replace_for_[ settings.location_code ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id4215201"] %}{% assign ly_translation = shop.metafields[namespace]["id4215201"] %}{% else %}{% assign ly_translation = settings.location_code %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}
        </div>
      </div>
      {% endif %}
      {% endif %}
    </div>
    {% endform %}
  </div>
</div>