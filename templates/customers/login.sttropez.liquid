<script>
  /*
    Show/hide the recover password form when requested.
    I'd suggest using some CSS3 transitions to make this change look cool,
    but this gets the job done for now.
  */
  function showRecoverPasswordForm() {
    document.getElementById('recover_password').style.display = 'block';
    document.getElementById('customer_login').style.display='none';
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover_password').style.display = 'none';
    document.getElementById('customer_login').style.display = 'block';
  }

  function showRetailSignupFormForm() {
    document.getElementById('create-retail-account').style.display = 'block';
    document.getElementById('create-account-buttons').style.display = 'none';
    document.getElementById('create-pro-account').style.display = 'none';
    document.getElementById('contact_form').style.display = 'none';
  }

  function showProSignupFormForm() {
    document.getElementById('create-pro-account').style.display = 'block';
    document.getElementById('create-retail-account').style.display = 'none';
    document.getElementById('create-account-buttons').style.display = 'none';
    document.getElementById('contact_form').style.display = 'none';
  }

  function showWholeSaleSignupFormForm() {
    document.getElementById('contact_form').style.display = 'block';
    document.getElementById('create-pro-account').style.display = 'none';
    document.getElementById('create-retail-account').style.display = 'none';
    document.getElementById('create-account-buttons').style.display = 'none';
  }

  // Allow deep linking to the recover password form
  if (window.location.hash == '#recover') { showRecoverPasswordForm() }
  if (window.location.hash == '#create-retail-account') { showRetailSignupFormForm() }
  if (window.location.hash == '#create-pro-account') { showProSignupFormForm() }
  if (window.location.hash == '#contact_form') { showWholeSaleSignupFormForm() }

  // reset_success is only true when the reset form is
  {% if reset_success %}
    document.getElementById('resetSuccess').style.display = 'block';
  {% endif %}
</script>

