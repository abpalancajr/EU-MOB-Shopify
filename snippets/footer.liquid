    <p class="title"><ly-as-4214684>SELECT YOUR REGION</ly-as-4214684></p>
    <ul class="country-selector">
      <li>
        <a href="http://us.store.marqueofbrands.com/">{% comment %}ly_asset_replace_for_[ 'us.png' | asset_url | img_tag: 'US', '<ly-as-4214681>flag</ly-as-4214681>' ]_begin{% endcomment %}{% assign ly_asset = 'us.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag: 'US', '<ly-as-4214681>flag</ly-as-4214681>' }}{% comment %}ly_asset_replace_end{% endcomment %}<ly-as-4214685>USA & Canada</ly-as-4214685></a>
      </li>
      <li>
        <a href="http://uk.store.marqueofbrands.com/">{% comment %}ly_asset_replace_for_[ 'uk.png' | asset_url | img_tag: 'UK', '<ly-as-4214681>flag</ly-as-4214681>' ]_begin{% endcomment %}{% assign ly_asset = 'uk.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag: 'UK', '<ly-as-4214681>flag</ly-as-4214681>' }}{% comment %}ly_asset_replace_end{% endcomment %}<ly-as-4214686>United Kingdom</ly-as-4214686></a>
      </li>
      <li>
        <a href="http://eu.store.marqueofbrands.com/">{% comment %}ly_asset_replace_for_[ 'eu.png' | asset_url | img_tag: 'EU', '<ly-as-4214681>flag</ly-as-4214681>' ]_begin{% endcomment %}{% assign ly_asset = 'eu.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag: 'EU', '<ly-as-4214681>flag</ly-as-4214681>' }}{% comment %}ly_asset_replace_end{% endcomment %}<ly-as-4214687>Europe</ly-as-4214687></a>
      </li>
      <li>
        <a href="http://au.store.marqueofbrands.com/">{% comment %}ly_asset_replace_for_[ 'au.png' | asset_url | img_tag: 'AU', '<ly-as-4214681>flag</ly-as-4214681>' ]_begin{% endcomment %}{% assign ly_asset = 'au.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | img_tag: 'AU', '<ly-as-4214681>flag</ly-as-4214681>' }}{% comment %}ly_asset_replace_end{% endcomment %}<ly-as-4214688>Australia & NZ</ly-as-4214688></a>
      </li>
    </ul>
  </div>
  <script>
    jQuery(document).ready(function($) {
      function showQuickviewCountrySelector() {
        $('#quickViewResponseData_CountrySelector').show();
        $('#quickViewOverlay_CountrySelector').show();
      }
      function hideQuickviewCountrySelector() {
        $('#quickViewResponseData_CountrySelector').hide();
        $('#quickViewOverlay_CountrySelector').hide();
      }
      
      $('.close-quickview').on('click', function(){
        hideQuickviewCountrySelector();
      });
      
      $('#quickViewOverlay_CountrySelector').on('click', function(e){
        if(e.target !== e.currentTarget) return;
        hideQuickviewCountrySelector();
      });

      $('a[href*="choose-country"]').on('click', function(e) { // filter choose country links
        e.preventDefault();
        showQuickviewCountrySelector();
      });

      var url = window.location.href.toLowerCase();
      var curSrc = $('.footer-text .brands .flag').attr('src');
      var curHref = $('.footer-text .brands a').attr('href');
      if (url.indexOf("us.store") >= 0) {
        curSrc = curSrc.replace('uk.png', 'us.png');
        curHref = curHref.replace('uk.store', 'us.store');
      }
      if (url.indexOf("eu.store") >= 0) {
        curSrc = curSrc.replace('uk.png', 'eu.png');
        curHref = curHref.replace('uk.store', 'eu.store');
      }
      if (url.indexOf("au.store") >= 0) {
        curSrc = curSrc.replace('uk.png', 'au.png');
        curHref = curHref.replace('uk.store', 'au.store');
      }
      $('.footer-text .brands .flag').attr('src', curSrc);
      $('.footer-text .brands a').attr('href', curHref);
    });
  </script>
</footer>

