{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<div class="col-xs-3 sidebar collection-sidebar">
  {% if settings.display_sidebar_categories %}
  <div class="widget sidebar-links">
    <div class="widget-title"><h3><span>{% comment %}ly_new_settings_replace_for_[ settings.sidebar_categories_title ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id4214629"] %}{% assign ly_translation = shop.metafields[namespace]["id4214629"] %}{% else %}{% assign ly_translation = settings.sidebar_categories_title %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}</span></h3></div>
    <div class="widget-content">
      <ul>
        {% if settings.style_categories == 'style_show_all' %}
        {% for category in collections %}
        <li><a href="{{ category.url }}" {% if collection.handle == category.handle %} class="active" {% endif %}>{% comment %}ly_code_replace_for_[ category.title ]_begin{% endcomment %}{% include 'ly-title' with category %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a></li>     
        {% endfor %}
        {% else %}
        
        {% assign items = settings.categories_items | split:"," | strip | downcase %}
        {% for category in collections %}
        {% assign cat = category.title | downcase %}
        {% if items contains cat %}
        <li><a href="{{ category.url }}" {% if collection.handle == category.handle %} class="active" {% endif %}>{% comment %}ly_code_replace_for_[ category.title ]_begin{% endcomment %}{% include 'ly-title' with category %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a></li>     
        {% endif %}
        {% endfor %}
        {% endif %}
      </ul>
    </div>
  </div>
  {% endif %}
  
  
  {% include 'collection-sidebar-shop-by-blocks' %}
  
  {% if settings.show_featured_product %}
  {% include 'collection-sidebar-featured-products' %}
  {% endif %}
  
  {% if settings.display_banner_sidebar %}
  {% include 'collection-sidebar-banner-block' %}
  {% endif %}
  
  {% if settings.display_sidebar_custom %}
  {% include 'collection-sidebar-custom-cms-block' %}
  {% endif %}
  
</div>